{
  "kind":"ReplicationController",
  "apiVersion":"v1",
  "metadata":{
     "name":"nginx",
     "labels":{

        "app":"nginx"
     }
  },
  "spec":{

     "replicas":0,
     "selector":{

        "app":"nginx"
     },
     "template":{

        "metadata":{
           "labels":{

              "app":"nginx"
           }
        },
        "spec":{

           "containers":[
              {
                 "name":"nginx",
                 "image":"nginx",
                 "ports":[
                    {
                       "name":"http-server",
                       "containerPort":80
                    }
                 ]
              }
           ]
        }
     }
  }
}